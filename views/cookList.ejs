<% layout("/layouts/biolerplatecook") %>

<body>             
        </div>
        <div class="container my-5">
            <% for(let cook of allCooks) { %>
                <a href="/users/listings/<%=cook._id%>" class="listing-link">
            <div class="row profile-card">
                <!-- Profile 1 -->
                <div class="col-md-12">
                    <div class="card">
                        <div class="row no-gutters">
                            <div class="col-md-4">
                                <img src="<%= cook.profilePic%>" class="card-img profile-img" alt="Customer Image">
                            </div>
                            <div class="col-md-8">
                                <div class="card-body profile-info">
                                    <h5 class="card-title"><%= cook.name%></h5>
                                    <p class="card-text"><%= cook.address%></p>
                                    <p class="card-text"><%= cook.price%></p>
                                    <p class="card-text"><%= cook.title%></p>
                             
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </a>
            <%}%>
        </div>
    
      
        
        <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
        <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
    
</body>
</html>
